<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<EditText-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/restaurant_dest_title_text"-->
            <!--android:hint="목적지 식당 이름입니다."-->
            <!--android:layout_weight="2"-->
            <!--android:singleLine="true"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="목적지결정"
            android:backgroundTint="#7C4D3FB8"

            android:layout_weight="1"
            android:id="@+id/restaurant_select_destination_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="위치"
            android:backgroundTint="#7C4D3FB8"

            android:layout_weight="1"
            android:id="@+id/current_location_button" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:fillViewport="true"
        android:layout_weight="1">

        <ListView
            android:id="@+id/restaurant_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </ScrollView>

</LinearLayout>

